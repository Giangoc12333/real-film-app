<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.ResetPassword1Activity"

    android:id="@+id/fragment_pass"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tiplayout_email_reset_password1"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:passwordToggleTint="@color/white_50"
        app:counterTextColor="@color/white"
        app:errorTextColor="@color/red_100"
        android:theme="@style/AppTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:elegantTextHeight="false"
            android:id="@+id/edittext_email_password"
            android:textColor="@color/white"
            android:hint="Email của bạn"
            android:maxLength="20"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tiplayout_reset_password"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white_50"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextColor="@color/white"
        app:counterMaxLength="20"
        app:errorTextColor="@color/red_100"
        android:theme="@style/AppTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:elegantTextHeight="false"
            android:id="@+id/edittext_reset_password"
            android:textColor="@color/white"
            android:hint="Mật khẩu mới"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/tiplayout_reset_confirm_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white_50"
        app:counterEnabled="true"
        app:counterOverflowTextAppearance="@style/CounterOverFlow"
        app:counterTextColor="@color/white"
        app:counterMaxLength="20"
        app:errorTextColor="@color/red_100"
        android:theme="@style/AppTheme">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:elegantTextHeight="false"
            android:id="@+id/edittext_reset_confirm_password"
            android:textColor="@color/white"
            android:hint="Nhập lại mật khẩu mới"
            android:maxLength="20"
            android:inputType="textPassword"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/red"
        android:text="@string/btn_confirm"
        android:fontFamily="@font/baloo"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
</LinearLayout>
